{% extends 'base_public.html.twig' %}

{% block title %}Login - {% endblock %}

{% block body %}

<div class="text-center">
<br/>
<br/>
<img style="max-height: 100%" src="{{ asset('img/logo-text.png') }}" alt="La Fraternelle"/>

<br/><br/>
{% if error %}
    <div class="alert alert-danger" role="alert">{{ error.message }}</div>
{% endif %}
<form action="{{ path('security_login') }}" method="post">
    <label for="_username">Email:</label>
    <input type="email" id="_username" name="_username" value="{{ last_username }}" />
    <br/>
    <label for="_password">Mot de passe:</label>
    <input type="password" id="_password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <br/><br/><button type="submit" class="btn btn-primary">login</button>
</form>
<br/><br/>
</div>


{% endblock %}