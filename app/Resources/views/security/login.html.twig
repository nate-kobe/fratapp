{% extends 'base_public.html.twig' %}

{% block title %}Login - {% endblock %}

{% block body %}


{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
<div class="text-center">
<br/>
<br/>
<img style="max-height: 100%" src="{{ asset('img/logo-text.png') }}" alt="La Fraternelle"/>
<h1 class="page-header">Connexion</h1>
<form action="{{ path('security_login') }}" method="post">
    <label for="_username">Email:</label>
    <input type="email" id="_username" name="_username" value="{{ last_username }}" />
    <br/>
    <label for="_password">Mot de passe:</label>
    <input type="password" id="_password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>
</div>


{% endblock %}